{
  "name": "@manaten/manaten.net",
  "version": "0.0.1",
  "description": "http://manaten.net source code.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress",
    "debug": "webpack-dev-server",
    "deploy": "run-s build deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist -b gh-pages",
    "watch": "webpack --progress --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:staged": "lint-staged",
    "lint:css": "stylelint \"src/assets/css/**/*.{css,less,scss,sss}\"",
    "lint": "run-s lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manaten/manaten.net.git"
  },
  "author": "manaten <manaten@manaten.net> (http://manaten.net/)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/manaten/manaten.net/issues"
  },
  "homepage": "http://manaten.net",
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.25.0",
    "deasync": "^0.1.9",
    "detect-port": "^1.0.5",
    "editorconfig-tools": "^0.1.1",
    "extract-loader": "^0.0.2",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.12.0",
    "html-loader": "^0.4.4",
    "lint-staged": "^3.3.1",
    "npm-run-all": "^4.0.1",
    "postcss-cssnext": "^2.8.0",
    "postcss-loader": "^1.1.1",
    "postcss-smart-import": "^0.5.1",
    "pre-commit": "^1.2.2",
    "pug-html-loader": "^1.0.9",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^1.16.3"
  },
  "dependencies": {},
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.{css,less,scss,sss}": [
      "stylefmt",
      "stylelint",
      "git add"
    ]
  }
}
