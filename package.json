{
  "name": "@manaten/manaten.net",
  "version": "0.0.1",
  "description": "http://manaten.net source code.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress",
    "debug": "webpack-dev-server",
    "deploy": "run-s build deploy:firebase",
    "deploy:firebase": "firebase deploy --only hosting",
    "watch": "webpack --progress --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "lint:css": "stylelint \"src/assets/css/**/*.{css,less,scss,sss}\"",
    "lint": "run-s lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manaten/manaten.net.git"
  },
  "author": "manaten <manaten@manaten.net> (http://manaten.net/)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/manaten/manaten.net/issues"
  },
  "homepage": "http://manaten.net",
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.5",
    "editorconfig-tools": "^0.1.1",
    "extract-loader": "^1.0.1",
    "file-loader": "^0.11.2",
    "firebase-tools": "^3.9.2",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "imagemin-cli": "^3.0.0",
    "lint-staged": "^3.3.1",
    "npm-run-all": "^4.0.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "postcss-smart-import": "^0.5.1",
    "pug-html-loader": "^1.1.5",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {},
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 ChromeAndroid versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 iOS versions",
    "ie >= 11",
    "> 5%"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "flexbox",
            "viewport-units",
            "border-image",
            "outline"
          ]
        }
      ],
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.{css,less,scss,sss}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif}": [
      "node ./scripts/imagemin.js",
      "git add"
    ]
  }
}
